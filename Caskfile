# CLI for administration of macOS applications distributed as binaries
# https://github.com/caskroom/homebrew-cask
brew 'brew-cask'

# Cask install location
cask_args appdir: '/Applications'

# Cask repositories
tap 'caskroom/cask'
tap 'caskroom/versions'

