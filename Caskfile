# Homebrew Caskfile for macOS applications
# https://github.com/Homebrew/homebrew-bundle
# https://github.com/caskroom/homebrew-cask

# Cask install location
cask_args appdir: '/Applications'

# Cask repositories
tap 'caskroom/cask'
tap 'caskroom/versions'

# Install macOS applications distributed as binaries
cask '0xed'                 # hex editor
cask '1password'            # password manager
cask 'ammonite'             # tag visualizer and search utility
cask 'appcleaner'           # thoroughly uninstall unwanted apps
cask 'arduino'              # Arduino IDE
cask 'arq'                  # encrypted online backup utility
cask 'backuploupe'          # analyze Apple Time Machine backups
cask 'betterzip'            # file archive utility
cask 'carbon-copy-cloner'   # bootable backup utility
cask 'chronosync'           # backups, bootable clones, folder synchronizations
cask 'cocktail'             # macOS maintenance tools
cask 'coderunner'           # programming editor
cask 'daisydisk'            # disk usage analyzer
cask 'dash'                 # API documentation browser and code snippet manager
cask 'divvy'                # window arrangement utility
cask 'dropbox'              # finder intergration for cloud file storage
cask 'forklift'             # file transfer application and sftp client
cask 'fritzing'             # electronics prototyping
cask 'gephi'                # network analysis and visualization
cask 'gimp'                 # GNU Image Manipulation Program
cask 'gitup'                # git interface
cask 'google-chrome'        # web browser
cask 'gpg-suite'            # OpenPGP tools
cask 'graphicconverter'     # raster graphics tools
cask 'graphiql'             # GraphQL query interface
cask 'handbrake'            # open source video transcoder
cask 'hex-fiend'            # open source hex editor
cask 'hyper'                # terminal emulator
cask 'iterm2'               # terminal emulator
cask 'kaleidoscope'         # diff tool for code and images
cask 'karabiner-elements'   # keyboard customization utility
cask 'keycue'               # display menu shortcut commands
cask 'kitty'                # GPU based terminal emulator
cask 'launchcontrol'        # launchd services interface
cask 'lingon-x'             # automation interface
cask 'macvim'               # macOS GUI for Vim
cask 'mysqlworkbench'       # unified visual tool for mysql databases
cask 'ngrok'                # secure introspectable tunnels to localhost
cask 'nightowl'             # macOS menu bar tool to toggle dark mode
cask 'nteract'              # Desktop application for interactive notebooks
cask 'nvalt'                # fork of original Notational Velocity
cask 'openrefine'           # data cleanup and transformation interface
cask 'osculator'            # MIDI link between controllers and software
cask 'plistedit-pro'        # property list editor
cask 'popchar'              # special character viewer
cask 'processing'           # Processing IDE
cask 'r-app'                # The R Project for Statistical Computing
cask 'renamer'              # file renaming utility
cask 'sequel-pro'           # MySQL database gui
cask 'shimo'                # VPN client
cask 'sketch'               # digital design application
cask 'spectacle'            # window arrangement utility
cask 'ssh-tunnel-manager'   # ssh tunnel GUI
cask 'sublime-merge'        # git client
cask 'sublime-text'         # text editor
cask 'taskpaper'            # plain text to-do lists interface
cask 'tower'                # Git client and gui
cask 'transmit'             # file transfer application
cask 'vimr'                 # Neovim GUI for macOS
cask 'vlc'                  # media player
cask 'vuescan'              # scanning software
casl 'tableplus'            # GUI for relational databases

# pre-release web browser builds
cask 'google-chrome-canary'
cask 'safari-technology-preview'

# QuickLook Plugins
cask 'gislook'        # preview GIS files and show metadata in the Finder
cask 'jupyter-notebook-ql'
cask 'provisionql'    # iOS / macOS app and provision information
cask 'qlcolorcode'    # source code files with syntax highlighting
cask 'qlimagesize'    # display image size and resolution
cask 'qlmarkdown'     # preview Markdown formatted text
cask 'qlprettypatch'  # preview patch files
cask 'qlstephen'      # plain text files with/without an unknown file extension
cask 'qlvideo'        # thumbnails, previews and metadata for most video files
cask 'quicklook-csv'  # preview CSV data
cask 'quicklook-json' # preview JSON data
cask 'quicklook-pat'  # Adobe Photoshop pattern files
cask 'quicklookapk'   # Android APK files
cask 'quicklookase'   # Adobe ASE Color Swatches
cask 'suspicious-package'


# Install Mac App Store command line interface
# https://github.com/mas-cli/mas
brew 'mas'

